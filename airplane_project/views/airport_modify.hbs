<h1>{{ title }}</h1>

<table>
    <tr>
        <td>Airport_Code</td>
        <td>Airport_Name</td>
        <td>City</td>
        <td>State</td>
    </tr>
    {{#each airport}}
    <form method="post"> <!--post에서처리-->
        <tr>
            <!-- input tag를 사용하여 입력 가능한 형태로 변경함(다른 방법도 검색하면 있음) -->
            <td><input type="text" name="airport_code" value={{Airport_Code}} readonly></td>
            <td><input type="text" name="airport_name" value="{{Airport_Name}}" placeholder={{Airport_Name}}></td>
            <td><input type="text" name="city" value="{{City}}" placeholder={{City}}></td>
            <td><input type="text" name="state" value="{{State}}" placeholder={{State}}></td>
            <!-- formation 속성을 활용하여 입력한 값을 넘겨줌) -->
            <td><input type="submit" value="수정" formaction="/admin/airport/modify"></td>
        </tr>
    </form>   
    {{/each}}
</table>