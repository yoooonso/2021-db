<h1>{{ title }}</h1>

<table>
    <tr>
        <td>Dname</td>
        <td>Dnumber</td>
        <td>Mgr_ssn</td>
        <td>Mgr_start_date</td>
    </tr>
    <!-- dept_res 데이터가 있을 때 마다 반복-->
    {{#each dept_res}}
    <form method="post"> <!--post에서처리-->
        <tr>
            <!-- input tag를 사용하여 입력 가능한 형태로 변경함(다른 방법도 검색하면 있음) -->
            <td><input type="text" name="dname" placeholder={{Dname}}></td>
            <td>{{Dnumber}}</td>
            <td>{{Mgr_ssn}}</td>
            <td>{{Mgr_start_date}}</td>
            <!-- formation 속성을 활용하여 입력한 값을 넘겨줌) -->
            <td><input type="submit" value="수정" formaction="/update/department"></td>
        </tr>
    </form>   
    {{/each}}
</table>